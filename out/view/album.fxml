<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="view.AlbumController" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button text="Create Album" onAction="#handleCreateAlbum"/>
                <Button text="Delete Album" onAction="#handleDeleteAlbum"/>
            </children>
        </VBox>
    </left>
    <center>
       <ListView fx:id="albumListView" prefWidth="400" prefHeight="400"/>
    </center>
</BorderPane>
