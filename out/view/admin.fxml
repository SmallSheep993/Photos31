<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="view.AdminController" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <Button text="Create User" onAction="#handleCreateUser"/>
        <Button text="Delete User" onAction="#handleDeleteUser"/>
    </children>
</VBox>

    </left>
    <center>
        <ListView fx:id="userListView" prefWidth="300" prefHeight="400"/>
    </center>
</BorderPane>
